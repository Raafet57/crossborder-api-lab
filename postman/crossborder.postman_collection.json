{
  "info": {
    "_postman_id": "d9e3b6de-2e44-4fb6-8a2d-6b6605d5f8d5",
    "name": "crossborder-api-lab",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const authKey = pm.environment.get('authKey') || 'demo_key';",
          "const correlationId = pm.variables.replaceIn('{{$uuid}}');",
          "",
          "pm.request.headers.upsert({ key: 'Authorization', value: `Bearer ${authKey}` });",
          "pm.request.headers.upsert({ key: 'X-Correlation-Id', value: correlationId });",
          "pm.environment.set('lastCorrelationId', correlationId);",
          "",
          "if (pm.request.method === 'POST') {",
          "  const idempotencyKey = pm.variables.replaceIn('{{$uuid}}');",
          "  pm.request.headers.upsert({ key: 'Idempotency-Key', value: idempotencyKey });",
          "  pm.request.headers.upsert({ key: 'Content-Type', value: 'application/json' });",
          "  pm.environment.set('lastIdempotencyKey', idempotencyKey);",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "1 Discover",
      "item": [
        {
          "name": "GET /v1/payers",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/v1/payers"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('2xx', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "const data = pm.response.json();",
                  "pm.test('Response is an array', function () {",
                  "  pm.expect(Array.isArray(data)).to.be.true;",
                  "  pm.expect(data.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "const payer = data[0];",
                  "pm.test('Payer schema keys present', function () {",
                  "  pm.expect(payer).to.have.property('id');",
                  "  pm.expect(payer).to.have.property('country');",
                  "  pm.expect(payer).to.have.property('currency_pairs');",
                  "  pm.expect(payer).to.have.property('required_fields');",
                  "  pm.expect(payer).to.have.property('min_amount');",
                  "  pm.expect(payer).to.have.property('max_amount');",
                  "});",
                  "",
                  "pm.environment.set('payerId', payer.id);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "2 Quote",
      "item": [
        {
          "name": "POST /v1/quotations",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"source_amount\": 100,\n  \"source_currency\": \"SGD\",\n  \"dest_currency\": \"PHP\",\n  \"payer_id\": \"{{payerId}}\",\n  \"mode\": \"SOURCE\"\n}\n",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{baseUrl}}/v1/quotations"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('2xx', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "const data = pm.response.json();",
                  "pm.test('Quote schema keys present', function () {",
                  "  ['id','fx_rate','fee','source_amount','dest_amount','expires_at'].forEach(function (key) {",
                  "    pm.expect(data).to.have.property(key);",
                  "  });",
                  "});",
                  "",
                  "pm.environment.set('quoteId', data.id);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "3 Create Transaction",
      "item": [
        {
          "name": "POST /v1/quotations/:id/transactions",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"external_id\": \"EXT123\",\n  \"sender\": {\n    \"first_name\": \"Jane\",\n    \"last_name\": \"Doe\"\n  },\n  \"receiver\": {\n    \"first_name\": \"Juan\",\n    \"last_name\": \"Dela Cruz\",\n    \"bank_account\": \"1234567890\"\n  },\n  \"purpose\": \"Salary\"\n}\n",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{baseUrl}}/v1/quotations/{{quoteId}}/transactions"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('2xx', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "const data = pm.response.json();",
                  "pm.test('Transaction schema keys present', function () {",
                  "  ['id','quote_id','payer_id','external_id','sender','receiver','purpose','status'].forEach(function (key) {",
                  "    pm.expect(data).to.have.property(key);",
                  "  });",
                  "});",
                  "",
                  "pm.test('quote_id matches', function () {",
                  "  pm.expect(data.quote_id).to.eql(pm.environment.get('quoteId'));",
                  "});",
                  "",
                  "pm.environment.set('transactionId', data.id);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "4 Confirm",
      "item": [
        {
          "name": "POST /v1/transactions/:id/confirm",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{}\n",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{baseUrl}}/v1/transactions/{{transactionId}}/confirm"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('2xx', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "const data = pm.response.json();",
                  "pm.test('Confirm response keys present', function () {",
                  "  pm.expect(data).to.have.property('id');",
                  "  pm.expect(data).to.have.property('status');",
                  "});",
                  "",
                  "pm.test('transaction id matches', function () {",
                  "  pm.expect(data.id).to.eql(pm.environment.get('transactionId'));",
                  "});",
                  "",
                  "pm.test('status is expected', function () {",
                  "  pm.expect(['CONFIRMED','COMPLETED','REJECTED']).to.include(data.status);",
                  "});",
                  "",
                  "pm.environment.set('transactionStatus', data.status);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "5 Get Status",
      "item": [
        {
          "name": "GET /v1/transactions/:id",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/v1/transactions/{{transactionId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('2xx', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "const data = pm.response.json();",
                  "pm.test('Status response keys present', function () {",
                  "  ['id','quote_id','payer_id','external_id','status','created_at','updated_at'].forEach(function (key) {",
                  "    pm.expect(data).to.have.property(key);",
                  "  });",
                  "});",
                  "",
                  "pm.test('transaction id matches', function () {",
                  "  pm.expect(data.id).to.eql(pm.environment.get('transactionId'));",
                  "});",
                  "",
                  "pm.environment.set('transactionStatus', data.status);"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
